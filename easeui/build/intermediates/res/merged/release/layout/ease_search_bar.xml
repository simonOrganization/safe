<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm090"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:background="@color/line_big"
    android:paddingLeft="@dimen/padding_search_bar"
    android:paddingRight="@dimen/padding_search_bar">

    <EditText

        android:paddingLeft="@dimen/dm030"
        android:id="@+id/query"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/ease_btn_search_shape"
        android:drawableLeft="@drawable/search_pic_gray"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/title_999"
        android:textSize="@dimen/dm028"
        android:hint="输入关键词搜索"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:singleLine="true"
        android:drawablePadding="@dimen/dm016"/>

    <ImageButton
        android:id="@+id/search_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:src="@drawable/ease_search_clear"
        android:visibility="invisible" />

</RelativeLayout>