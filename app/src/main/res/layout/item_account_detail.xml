<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dm001">

        <LinearLayout
            android:id="@+id/first_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm024">
            <TextView
                android:id="@+id/tv_get_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/dm026"
                android:text="提现"/>

            <TextView
                android:id="@+id/tv_single_money"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_999"
                android:textSize="@dimen/dm022"
                android:text="-20.00"
                android:layout_marginRight="@dimen/dm010"/>
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待处理"
                android:layout_alignParentRight="true"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/second_item"
            android:layout_below="@id/first_item"
            android:layout_marginTop="@dimen/dm016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/dm026"
                android:text="2017/03/26 10:59"/>

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/dm022"
                android:text="余额：¥50.00"/>
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:background="@color/line_big"
        android:layout_below="@id/second_item"
        android:layout_marginTop="@dimen/dm016"/>
</RelativeLayout>