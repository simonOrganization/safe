<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="@dimen/dm110"
        android:layout_height="@dimen/dm200"
        android:orientation="vertical"
        android:paddingTop="@dimen/dm010">

    <com.lchtime.safetyexpress.views.CircleImageView
        android:id="@+id/raiv_hotcircle_icon"
        android:layout_width="@dimen/dm090"
        android:layout_height="@dimen/dm090"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/home_test_img5"/>

    <TextView
        android:id="@+id/tv_hotcircle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm010"
        android:singleLine="true"
        android:text="万家灯火"
        android:textSize="@dimen/dm022"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/title_333"/>

    <ImageView
        android:id="@+id/iv_hotcircle_subscribe"
        android:layout_width="@dimen/dm080"
        android:layout_height="@dimen/dm040"
        android:src="@drawable/subscribe_on"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm010"/>
    </LinearLayout>
</LinearLayout>