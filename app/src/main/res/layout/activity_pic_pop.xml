<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dm011"
        android:layout_marginRight="@dimen/dm011">

        <TextView
            android:id="@+id/tv_picture_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm024"
            android:gravity="center"
            android:text="从手机相册中选择"
            android:textColor="@color/title_666"
            android:textSize="@dimen/dm022" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:background="@color/line"/>

        <TextView
            android:id="@+id/tv_takepic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm024"
            android:gravity="center"
            android:text="拍摄"
            android:textColor="@color/title_666"
            android:textSize="@dimen/dm022" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:background="@color/line"/>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm024"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/title_666"
            android:textSize="@dimen/dm022" />


    </LinearLayout>



</LinearLayout>