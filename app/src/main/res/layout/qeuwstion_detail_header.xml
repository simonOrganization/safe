<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_home_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/title_333"
            android:textSize="@dimen/dm026"
            android:layout_margin="@dimen/dm016"
            />

        <TextView
            android:id="@+id/tv_home_question_describ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dm020"
            android:textColor="@color/title_666"
            android:textSize="@dimen/dm022" />

        <com.lchtime.safetyexpress.views.MyGridView
            android:id="@+id/mgv_home_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm016"
            android:horizontalSpacing="@dimen/dm010"
            android:listSelector="@android:color/transparent"
            android:layout_marginLeft="@dimen/dm030"
            android:layout_marginRight="@dimen/dm030"
            android:numColumns="3">

        </com.lchtime.safetyexpress.views.MyGridView>
        <ImageView
            android:id="@+id/one_pic_home_question"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dm024"
            android:layout_marginLeft="@dimen/dm030"
            android:layout_height="@dimen/dm240" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_home_question_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dm016"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dm020"
                android:textColor="@color/title_999"
                android:textSize="@dimen/dm020" />
            <TextView
                android:id="@+id/tv_home_focus_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dm016"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dm020"
                android:textColor="@color/title_999"
                android:textSize="@dimen/dm020" />

        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/dm032"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm064"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_isguanzhu"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_guanzhu"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dm024"
                    android:layout_height="@dimen/dm024"
                    android:background="@drawable/question_addpic"/>
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dm005"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="关注问题"
                    android:textSize="@dimen/dm026"
                    android:textColor="#e9553e"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_yiguanzhu"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dm024"
                    android:layout_height="@dimen/dm024"
                    android:background="@drawable/question_addpic_press"/>
                <TextView
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/dm005"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="已关注"
                    android:textSize="@dimen/dm026"
                    android:textColor="@color/title_999"/>
            </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dm001"
                android:layout_height="match_parent"
                android:background="@color/line" />
            <LinearLayout
                android:id="@+id/ll_invite_friend"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView

                    android:layout_width="@dimen/dm024"
                    android:layout_height="@dimen/dm024"
                    android:background="@drawable/question_invitepic"/>
                <TextView
                    android:layout_marginLeft="@dimen/dm005"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="邀请好友回答"
                    android:textSize="@dimen/dm026"
                    android:textColor="#e9553e"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:background="@color/line" />
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm016"
            android:background="@color/line_big" />

    </LinearLayout>
</LinearLayout>