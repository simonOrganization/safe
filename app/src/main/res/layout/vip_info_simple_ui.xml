<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_big"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm328"
        android:layout_marginTop="@dimen/dm020"
        android:background="@color/white"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_info_simple"
            android:background="@android:color/transparent"
            android:textCursorDrawable="@null"
            android:textColorHint="#333333"
            android:layout_marginLeft="@dimen/dm024"
            android:gravity="top"
            android:textSize="@dimen/dm028"
            android:textColor="@color/title_666"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

</LinearLayout>