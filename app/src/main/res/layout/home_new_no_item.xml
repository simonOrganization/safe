<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_item_pic_wenzi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"
        android:layout_marginBottom="@dimen/dm020"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/rb_delete"
            android:layout_width="@dimen/dm040"
            android:layout_height="@dimen/dm040"
            android:text="@null"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:button="@null"
            android:visibility="gone"
            android:background="@drawable/rb_delete"
            android:layout_marginLeft="@dimen/dm020"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dm020"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_new_no_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="住房城乡建设部办公厅关于进一步加强建筑施工安全生产工作的紧张进行中。住房城乡建设部办公厅关于进一步加强建筑施工安全生产工作的紧张进行中。"
                    android:textColor="@color/title_333"
                    android:textSize="@dimen/dm028" />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="@dimen/dm230"
                android:layout_height="@dimen/dm160"
                android:layout_marginLeft="@dimen/dm020">
                <ImageView
                    android:id="@+id/home_new_no_item_image"
                    android:layout_width="@dimen/dm230"
                    android:layout_height="@dimen/dm160"
                    android:background="@drawable/home_banner"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"/>
                <View
                    android:visibility="gone"
                    android:id="@+id/video_model"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#55000000"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:50"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:background="@color/line" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_item_pic_wenzi_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_item_pic_wenzi"
        android:layout_alignLeft="@id/ll_item_pic_wenzi"
        android:layout_alignStart="@id/ll_item_pic_wenzi"
        android:layout_marginLeft="@dimen/dm020">

        <TextView
            android:id="@+id/home_new_no_item_from"
            android:layout_marginBottom="@dimen/dm020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="未来新闻"
            android:textColor="@color/title_666"
            android:textSize="@dimen/dm024" />

        <TextView
            android:id="@+id/home_new_no_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:singleLine="true"
            android:text="223评论"
            android:textColor="@color/title_666"
            android:textSize="@dimen/dm024" />

        <TextView
            android:id="@+id/home_new_no_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:singleLine="true"
            android:text="09:30"
            android:textColor="@color/title_666"
            android:textSize="@dimen/dm024" />

    </LinearLayout>

    <View
        android:id="@+id/item_line"
        android:layout_below="@id/ll_item_pic_wenzi_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:background="@color/line"/>
</RelativeLayout>