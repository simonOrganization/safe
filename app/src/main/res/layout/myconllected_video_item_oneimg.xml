<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm020"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/rb_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@null"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:button="@null"
            android:visibility="visible"
            android:layout_marginRight="@dimen/dm020" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recommend_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="住房城乡建设部办公厅关于进一步加强建筑施工安全生产工作的紧张进行中。住房城乡建设部办公厅关于进一步加强建筑施工安全生产工作的紧张进行中。"
                android:textColor="@color/title_333"
                android:textSize="@dimen/dm028" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm030"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_recommend_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="小爷们"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:id="@+id/tv_recommend_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:singleLine="true"
                    android:text="1万次播放"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:id="@+id/tv_recommend_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:singleLine="true"
                    android:text="2-1-16"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/dm024" />

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/dm230"
            android:layout_height="@dimen/dm160"
            android:layout_marginLeft="@dimen/dm020">
            <ImageView
                android:id="@+id/iv_recommend_oneimg_img"
                android:layout_width="@dimen/dm230"
                android:layout_height="@dimen/dm160"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/home_test_img6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/dm008"
                android:layout_marginBottom="@dimen/dm008"
                android:text="05:55"/>
        </RelativeLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:background="@color/line" />

</LinearLayout>