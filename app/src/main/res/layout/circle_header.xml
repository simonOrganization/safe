<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm080"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/dm064"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/tv_hy_selected"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="行业选择"
            android:textColor="@color/circle_text_indicator_selector"
            android:textSize="@dimen/dm026" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dm020"
            android:background="@color/text_da"/>

        <TextView
            android:id="@+id/tv_gw_selected"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="岗位选择"
            android:textColor="@color/circle_text_indicator_selector"
            android:textSize="@dimen/dm026" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dm020"
            android:background="@color/text_da"/>

        <TextView
            android:id="@+id/tv_addr_selected"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="地理位置"
            android:textColor="@color/circle_text_indicator_selector"
            android:textSize="@dimen/dm026" />
        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/dm020"
            android:background="@color/text_da"/>

        <ImageView
            android:id="@+id/circle_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dm013"
            android:src="@drawable/icon_exchange"
            android:clickable="true" />
    </LinearLayout
>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm016"
        android:background="@color/page_color"/>

</LinearLayout>
