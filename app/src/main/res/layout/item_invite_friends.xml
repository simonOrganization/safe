<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm130">
    <RelativeLayout
        android:padding="@dimen/dm024"
        android:id="@+id/rl_money_zhifubao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm130">
        <com.lchtime.safetyexpress.views.CircleImageView
            android:id="@+id/iv_zhifubao_img"
            android:layout_width="@dimen/dm100"
            android:layout_height="@dimen/dm100"
            android:src="@drawable/zhifubao"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_zhifubao_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nickname"
                android:textSize="@dimen/dm024"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:layout_marginLeft="@dimen/dm011"
                android:text="提现到支付宝"
                android:ellipsize="end"
                android:maxLength="10"/>

            <TextView
                android:id="@+id/tv_detail"
                android:layout_marginTop="@dimen/dm016"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:layout_marginLeft="@dimen/dm011"
                android:textSize="@dimen/dm020"
                android:text="最低20，最高5000"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/tv_invite"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dm100"
            android:layout_height="@dimen/dm050"
            android:background="@drawable/invite_pink_grey_selector"
            android:textColor="@color/white"
            android:textSize="@dimen/dm030"
            android:button="@null"
            android:gravity="center"
            android:text="邀请"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:background="@color/line"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"/>
</RelativeLayout>