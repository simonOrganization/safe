                <RelativeLayout
                    android:id="@+id/photo_item"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm064">

                    <ImageView
                        android:id="@+id/photo_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
