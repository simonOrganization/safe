<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/shape_bg_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="@dimen/dm020">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbarThumbVertical="@color/commen_reg"
                android:scrollbarSize="3dp"
                android:scrollbars="vertical">
                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dm030"
                    android:gravity="left"
                    android:text="@string/help"
                    android:textColor="@color/title_333"
                    android:textSize="@dimen/dm026" />
            </ScrollView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm002"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"/>



        <TextView
            android:id="@+id/tv_perfect"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:gravity="center"
            android:text="知道了"
            android:textColor="@color/title_333"
            android:textSize="@dimen/dm028" />



    </LinearLayout>


</LinearLayout>