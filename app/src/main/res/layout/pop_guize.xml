<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="@dimen/dm550"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="@dimen/dm500"
            android:layout_height="@dimen/dm712"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@color/commen_reg"
            android:scrollbarSize="3dp"
            android:scrollbars="vertical">
            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm712"
                android:layout_margin="@dimen/dm030"
                android:gravity="left"
                android:text="@string/help"
                android:textColor="@color/title_333"
                android:textSize="@dimen/dm026" />
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm060"
            android:layout_margin="@dimen/dm010"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_perfect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="知道了"
                android:textColor="@color/commen_reg"
                android:textSize="@dimen/dm028" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>