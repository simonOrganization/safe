<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/sv_news_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm080"
                android:background="@color/line_big"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:id="@+id/tv_news_search_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近搜索"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/dm026" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/ll_news_search_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dm020">

                    <ImageView
                        android:id="@+id/iv_giveup"
                        android:layout_width="@dimen/dm043"
                        android:layout_height="@dimen/dm043"
                        android:src="@drawable/search_delete" />

                </LinearLayout>

            </LinearLayout>

            <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/slv_news_search_history"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/dm020"-->
                <!--android:layout_marginRight="@dimen/dm020"/>-->

            <com.lchtime.safetyexpress.views.FlowLayout
                android:id="@+id/slv_news_search_history"
                android:layout_marginTop="@dimen/dm020"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.lchtime.safetyexpress.views.FlowLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm080"
                android:layout_marginTop="@dimen/dm020"
                android:background="@color/line_big"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020">

                <TextView
                    android:id="@+id/tv_news_search_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门搜索"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/dm026" />

            </LinearLayout>

            <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/slv_news_search_hot"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/dm020"-->
                <!--android:layout_marginRight="@dimen/dm020"/>-->

            <com.lchtime.safetyexpress.views.FlowLayout
                android:id="@+id/slv_news_search_hot"
                android:layout_marginTop="@dimen/dm020"
                android:paddingLeft="@dimen/dm020"
                android:paddingRight="@dimen/dm020"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.lchtime.safetyexpress.views.FlowLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
