<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_videobody"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm300">

        <ImageView
            android:id="@+id/iv_recommend_videobody_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm300"
            android:background="@drawable/home_test_img8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_recommend_videobody_play"
                android:layout_width="@dimen/dm059"
                android:layout_height="@dimen/dm061"
                android:src="@drawable/video_play2" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>