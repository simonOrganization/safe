<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm020"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_new_video_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="住房城乡建设部办公厅关于进一步加强建筑施工安全生产工作的紧张进行中。住房城乡建设部办公厅关于进一步加强建筑施工安全生产工作的紧张进行中。"
            android:textColor="@color/title_333"
            android:textSize="@dimen/dm028" />

        <ImageView
            android:id="@+id/home_new_video_item_video"
            android:layout_width="@dimen/dm200"
            android:layout_height="@dimen/dm100"
            android:layout_marginTop="@dimen/dm020"
            android:background="@drawable/vip_test_icon"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm020"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_new_video_item_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="未来新闻"
                android:textColor="@color/title_666"
                android:textSize="@dimen/dm024" />

            <TextView
                android:id="@+id/home_new_video_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:singleLine="true"
                android:text="223评论"
                android:textColor="@color/title_666"
                android:textSize="@dimen/dm024" />

            <TextView
                android:id="@+id/home_new_video_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:singleLine="true"
                android:text="09:30"
                android:textColor="@color/title_666"
                android:textSize="@dimen/dm024" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:background="@color/line" />


</LinearLayout>