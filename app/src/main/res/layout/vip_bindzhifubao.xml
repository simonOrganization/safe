<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_big"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm280"
        android:orientation="vertical"
        android:background="@drawable/bg_mymoney">
        <ImageView
            android:layout_marginTop="@dimen/dm064"
            android:layout_width="@dimen/dm074"
            android:layout_height="@dimen/dm074"
            android:src="@drawable/renminbi_logo"/>
        <TextView
            android:layout_marginTop="@dimen/dm024"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm024"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="账户余额"/>
        <TextView
            android:id="@+id/tv_account_balance"
            android:layout_marginTop="@dimen/dm016"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dm024"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="¥15.00"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm048"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dm024"
        android:text="提现方式"
        android:textSize="@dimen/dm022"
        android:textColor="#666666"/>

    <include
        android:id="@+id/item_authorization_zhifubao"
        layout="@layout/item_money" />
</LinearLayout>