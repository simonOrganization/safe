<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_big"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <RelativeLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm065">
       <TextView
           android:layout_marginLeft="@dimen/dm016"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="绑定支付宝"
           android:textSize="@dimen/dm024"
           android:textColor="#333333"/>

        <ImageView
            android:layout_marginRight="@dimen/dm016"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dm100"
            android:layout_height="@dimen/dm040"
            android:src="@drawable/go_bind_no"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>
</LinearLayout>