<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title" />
    <TextView
        android:layout_marginTop="@dimen/dm024"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_height="@dimen/dm072"
        android:textSize="@dimen/dm026"
        android:textColor="@color/black"
        android:text="请输入您的支付宝账号和姓名，确保无误后提交即可"
        />
    <EditText
        android:id="@+id/editText_name"
        android:layout_marginTop="@dimen/dm048"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dm050"
        android:layout_marginRight="@dimen/dm050"
        android:layout_height="@dimen/dm072"
        android:background="@drawable/rectangle"
        android:textColorHint="@color/title_999"
        android:padding="@dimen/dm016"
        android:textSize="@dimen/dm026"
        android:hint="输入姓名"
        />

    <EditText
        android:id="@+id/editText_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm072"
        android:layout_marginLeft="@dimen/dm050"
        android:layout_marginRight="@dimen/dm050"
        android:layout_marginTop="@dimen/dm024"
        android:background="@drawable/rectangle"
        android:hint="输入支付宝账号"
        android:inputType="number"
        android:padding="@dimen/dm016"
        android:textColorHint="@color/title_999"
        android:textSize="@dimen/dm024" />

    <TextView
        android:id="@+id/tv_login_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm072"
        android:layout_marginLeft="@dimen/dm050"
        android:layout_marginRight="@dimen/dm050"
        android:layout_marginTop="@dimen/dm024"
        android:background="@drawable/shape_bg_pink"
        android:gravity="center"
        android:text="修改"
        android:textColor="@color/white"
        android:textSize="@dimen/dm026" />
</LinearLayout>