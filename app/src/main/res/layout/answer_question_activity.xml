<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/title" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm016"
                    android:background="@color/page_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm064"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/et_question_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm064"
                        android:layout_marginLeft="@dimen/dm020"
                        android:layout_marginTop="@dimen/dm019"
                        android:background="@color/white"
                        android:ellipsize="end"
                        android:gravity="top"
                        android:maxLines="2"
                        android:text="标题"
                        android:textColor="@color/title_666"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/dm022" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm016"
                    android:background="@color/page_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    android:background="@color/page_color"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_describe_text"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dm240"
                            android:layout_marginLeft="@dimen/dm020"
                            android:layout_marginTop="@dimen/dm019"
                            android:background="@color/white"
                            android:gravity="top"
                            android:hint="撰写您的回答"
                            android:textColor="@color/title_666"
                            android:textColorHint="@color/title_666"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/dm022" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm016"
                        android:background="@color/page_color" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dm019"
                        android:layout_marginLeft="@dimen/dm020"
                        android:layout_marginTop="@dimen/dm019"
                        android:background="@color/white"
                        android:overScrollMode="never" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/pb_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>