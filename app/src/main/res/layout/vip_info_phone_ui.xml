<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm016"
        android:background="@color/line_big" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm128"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您当前的手机号码是"
            android:textColor="@color/title_666"
            android:textSize="@dimen/dm022" />

        <TextView
            android:id="@+id/tv_info_phone_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm010"
            android:text="18888888888"
            android:textColor="@color/title_666"
            android:textSize="@dimen/dm022" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm010"
        android:gravity="center"
        android:text="更换后，账号信息不变，下次使用新手机号登录"
        android:textColor="@color/title_666"
        android:textSize="@dimen/dm022" />

    <TextView
        android:id="@+id/tv_info_phone_change"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm072"
        android:layout_marginLeft="@dimen/dm090"
        android:layout_marginRight="@dimen/dm090"
        android:layout_marginTop="@dimen/dm120"
        android:background="@drawable/shape_bg_pink"
        android:gravity="center"
        android:text="更换手机号"
        android:textColor="@color/white"
        android:textSize="@dimen/dm024" />

</LinearLayout>