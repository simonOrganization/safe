<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dm030"
    android:paddingBottom="@dimen/dm030"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/hot_circle_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lchtime.safetyexpress.views.CircleImageView
            android:id="@+id/raiv_hotcircle_icon"
            android:layout_width="@dimen/dm080"
            android:layout_height="@dimen/dm080"
            android:src="@drawable/circle_user_image" />

        <TextView
            android:id="@+id/tv_hotcircle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm020"
            android:singleLine="true"
            android:text="万家灯火"
            android:textSize="@dimen/dm026"
            android:textColor="@color/title_333"/>

        <CheckBox
            android:id="@+id/iv_hotcircle_subscribe"
            android:layout_width="@dimen/dm090"
            android:layout_height="@dimen/dm032"
            android:layout_marginTop="@dimen/dm012"
            android:text="@null"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/circle_item_subscribe_selector" />
    </LinearLayout>

</LinearLayout>