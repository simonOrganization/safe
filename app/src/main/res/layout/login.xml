<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <include layout="@layout/title" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm016"
            android:background="@color/line_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm072"
            android:layout_marginLeft="@dimen/dm050"
            android:layout_marginRight="@dimen/dm050"
            android:layout_marginTop="@dimen/dm080"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm020">

            <ImageView
                android:layout_width="@dimen/dm036"
                android:layout_height="@dimen/dm036"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/et_login_username"
                style="@style/edit_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm016"
                android:gravity="center|left"
                android:hint="请输入手机号"
                android:inputType="number"
                android:textSize="@dimen/dm022" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:layout_marginLeft="@dimen/dm070"
            android:layout_marginRight="@dimen/dm070"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm072"
            android:layout_marginLeft="@dimen/dm050"
            android:layout_marginRight="@dimen/dm050"
            android:layout_marginTop="@dimen/dm016"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm020">

            <ImageView
                android:layout_width="@dimen/dm036"
                android:layout_height="@dimen/dm036"
                android:src="@drawable/pwd" />

            <EditText
                android:id="@+id/et_login_passport"
                style="@style/edit_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm020"
                android:gravity="center|left"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:textSize="@dimen/dm022" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:layout_marginLeft="@dimen/dm070"
            android:layout_marginRight="@dimen/dm070"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm070"
            android:layout_marginRight="@dimen/dm070"
            android:layout_marginTop="@dimen/dm010"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_login_forpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingBottom="@dimen/dm016"
                android:paddingTop="@dimen/dm016"
                android:text="忘记密码?"
                android:textColor="@color/title_999"
                android:textSize="@dimen/dm020" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_login_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm072"
            android:layout_marginLeft="@dimen/dm070"
            android:layout_marginRight="@dimen/dm070"
            android:layout_marginTop="@dimen/dm030"
            android:background="@drawable/shape_bg_pink"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/dm024" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm016"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dm001"
                    android:layout_marginLeft="@dimen/dm070"
                    android:layout_weight="1"
                    android:background="@color/line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm030"
                    android:layout_marginRight="@dimen/dm030"
                    android:text="第三方账号登录"
                    android:textColor="@color/title_999"
                    android:textSize="@dimen/dm020" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dm001"
                    android:layout_marginRight="@dimen/dm070"
                    android:layout_weight="1"
                    android:background="@color/line" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm060"
                android:layout_marginLeft="@dimen/dm070"
                android:layout_marginRight="@dimen/dm070"
                android:layout_marginTop="@dimen/dm040"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_login_weixin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dm048"
                        android:layout_height="@dimen/dm048"
                        android:src="@drawable/weixin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm016"
                        android:text="微信"
                        android:textColor="@color/title_999"
                        android:textSize="@dimen/dm020" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_login_qq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dm048"
                        android:layout_height="@dimen/dm048"
                        android:src="@drawable/qq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm016"
                        android:text="QQ"
                        android:textColor="@color/title_999"
                        android:textSize="@dimen/dm020" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_login_sina"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dm048"
                        android:layout_height="@dimen/dm048"
                        android:src="@drawable/sina" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dm016"
                        android:text="微博"
                        android:textColor="@color/title_999"
                        android:textSize="@dimen/dm020" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
