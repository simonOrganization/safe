<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_vip_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm280"

                    android:background="@color/commen_reg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm050"
                        android:layout_marginRight="@dimen/dm050"
                        android:layout_marginTop="@dimen/dm035"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_phonenum_login"
                            android:layout_width="@dimen/dm180"
                            android:layout_height="@dimen/dm050"
                            android:layout_weight="1"
                            android:background="#302b0404"
                            android:gravity="center"
                            android:text="手机号登录"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dm022" />

                        <TextView
                            android:id="@+id/tv_phonenum_register"
                            android:layout_width="@dimen/dm180"
                            android:layout_height="@dimen/dm050"
                            android:layout_marginLeft="@dimen/dm020"
                            android:layout_weight="1"
                            android:background="#302b0404"
                            android:gravity="center"
                            android:text="手机号快速注册"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dm022" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dm020"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dm001"
                                android:layout_marginLeft="@dimen/dm050"
                                android:layout_weight="1"
                                android:background="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dm030"
                                android:layout_marginRight="@dimen/dm030"
                                android:text="第三方账号登录"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dm022" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dm001"
                                android:layout_marginRight="@dimen/dm050"
                                android:layout_weight="1"
                                android:background="@color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dm020"
                            android:layout_marginLeft="@dimen/dm070"
                            android:layout_marginRight="@dimen/dm070"
                            android:layout_marginTop="@dimen/dm026"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_vip_weixin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dm044"
                                    android:layout_height="@dimen/dm044"
                                    android:src="@drawable/vip_weixin" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dm016"
                                    android:text="微信"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dm022" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_login_qq"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dm044"
                                    android:layout_height="@dimen/dm044"
                                    android:src="@drawable/vip_qq" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dm016"
                                    android:text="QQ"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dm022" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_login_sina"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/dm044"
                                    android:layout_height="@dimen/dm044"
                                    android:src="@drawable/vip_sina" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dm016"
                                    android:text="微博"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/dm022" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_vip_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm280"
                    android:background="@color/commen_reg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <com.lchtime.safetyexpress.views.CircleImageView
                        android:id="@+id/civ_vip_icon"
                        android:layout_width="@dimen/dm110"
                        android:layout_height="@dimen/dm110"
                        android:layout_marginTop="@dimen/dm040"
                        android:background="@drawable/circle_user_image" />

                    <TextView
                        android:id="@+id/tv_vip_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm030"
                        android:layout_marginRight="@dimen/dm030"
                        android:layout_marginTop="@dimen/dm016"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="设置昵称"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dm022" />

                    <LinearLayout
                        android:id="@+id/tv_vip_info"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dm016"
                        android:paddingLeft="@dimen/dm030"
                        android:paddingRight="@dimen/dm030"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dm050"
                            android:paddingLeft="@dimen/dm030"
                            android:paddingRight="@dimen/dm030"
                            android:background="@drawable/shape_white_border"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="去完善个人信息"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dm022" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm016"
                    android:background="@color/line_big" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dm016"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_marginRight="@dimen/dm020"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_vip_mycircle_active"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm064"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                       >

                        <ImageView
                            android:layout_width="@dimen/dm036"
                            android:layout_height="@dimen/dm036"
                            android:src="@drawable/vip_dongtai" />

                        <TextView
                            android:id="@+id/tv_vip_myactive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm020"
                            android:text="我的圈子"
                            android:textColor="@color/title_666"
                            android:textSize="@dimen/dm024" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dm028"
                            android:layout_marginRight="@dimen/dm010"
                            android:background="@drawable/shape_bg_reg"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dm010"
                            android:paddingRight="@dimen/dm010"
                            android:visibility="gone"
                            android:text="12"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dm022"
                            android:id="@+id/textView" />

                        <ImageView
                            android:layout_width="@dimen/dm030"
                            android:layout_height="@dimen/dm024"
                            android:src="@drawable/right_next" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm001"
                        android:background="@color/line" />

                    <LinearLayout
                        android:id="@+id/tv_vip_collected"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_height="@dimen/dm064"
                       >

                        <ImageView
                            android:layout_width="@dimen/dm036"
                            android:layout_height="@dimen/dm036"
                            android:src="@drawable/vip_collection" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm020"
                            android:text="我的收藏"
                            android:textColor="@color/title_666"
                            android:textSize="@dimen/dm024" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="@dimen/dm030"
                            android:layout_height="@dimen/dm024"
                            android:src="@drawable/right_next" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm001"
                        android:background="@color/line" />

                    <LinearLayout
                        android:id="@+id/ll_vip_opinion"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm064"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="@dimen/dm036"
                            android:layout_height="@dimen/dm036"
                            android:src="@drawable/vip_jianyi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm020"
                            android:text="意见反馈"
                            android:textColor="@color/title_666"
                            android:textSize="@dimen/dm024" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="@dimen/dm030"
                            android:layout_height="@dimen/dm024"
                            android:src="@drawable/right_next" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm001"
                        android:background="@color/line" />

                    <LinearLayout
                        android:id="@+id/ll_vip_mymoney"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm064"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                       >

                        <ImageView
                            android:layout_width="@dimen/dm036"
                            android:layout_height="@dimen/dm036"
                            android:src="@drawable/vip_money" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm020"
                            android:text="我的钱包"
                            android:textColor="@color/title_666"
                            android:textSize="@dimen/dm024" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_money_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dm010"
                            android:text="0.00"
                            android:textColor="@color/commen_reg"
                            android:textSize="@dimen/dm024" />

                        <ImageView
                            android:layout_width="@dimen/dm030"
                            android:layout_height="@dimen/dm024"
                            android:src="@drawable/right_next" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm001"
                        android:background="@color/line" />

                    <LinearLayout
                        android:id="@+id/ll_vip_setting"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm064"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="@dimen/dm039"
                            android:layout_height="@dimen/dm039"
                            android:src="@drawable/vip_setting" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dm020"
                            android:text="设置"
                            android:textColor="@color/title_666"
                            android:textSize="@dimen/dm024" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:layout_width="@dimen/dm030"
                            android:layout_height="@dimen/dm024"
                            android:src="@drawable/right_next" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm001"
                        android:background="@color/line" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

