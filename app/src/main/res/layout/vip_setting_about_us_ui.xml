<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm020"
        android:background="@color/line_big" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm410"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/dm213"
            android:layout_height="@dimen/dm213"
            android:layout_marginTop="@dimen/dm110"
            android:src="@drawable/vip_logo" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm020"
        android:background="@color/line_big" />

    <LinearLayout
        android:id="@+id/ll_setting_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dm020">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服电话"
            android:textColor="@color/title_999"
            android:textSize="@dimen/dm028" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm010"
            android:layout_weight="1"
            android:gravity="right"
            android:singleLine="true"
            android:text="010-8812227"
            android:textColor="@color/commen_reg"
            android:textSize="@dimen/dm026" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm020"
        android:background="@color/line_big" />

    <LinearLayout
        android:id="@+id/ll_setting_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dm020">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/title_999"
            android:textSize="@dimen/dm028" />

        <TextView
            android:id="@+id/tv_setting_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm010"
            android:layout_weight="1"
            android:gravity="right"
            android:singleLine="true"
            android:text="liurongli@qq.com"
            android:textColor="@color/commen_reg"
            android:textSize="@dimen/dm026" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:background="@color/line" />

</LinearLayout>