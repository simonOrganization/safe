<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm016"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hottrack_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm008"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="住房城乡建设部办公厅关于进一步加强建筑施工安全生产工作的紧张进行中"
                android:textColor="@color/title_333"
                android:textSize="@dimen/dm024" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm040"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hottrack_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="未来新闻"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/dm024" />

                <TextView
                    android:id="@+id/tv_hottrack_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="2034赞"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/dm020" />

                <TextView
                    android:id="@+id/tv_hottrack_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:singleLine="true"
                    android:text="223评论"
                    android:textColor="@color/title_666"
                    android:textSize="@dimen/dm020" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_hottrack_img"
            android:layout_width="@dimen/dm230"
            android:layout_height="@dimen/dm160"
            android:layout_marginLeft="@dimen/dm016"
            android:background="@drawable/home_banner" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_marginTop="@dimen/dm020"
        android:background="@color/line" />

</LinearLayout>