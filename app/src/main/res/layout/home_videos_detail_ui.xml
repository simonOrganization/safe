<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm020"
            android:background="@color/line_big" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/line_big"></WebView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm098"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm001"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dm060"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_marginRight="@dimen/dm020"
                    android:layout_weight="1"
                    android:background="@drawable/shape_gray_border"
                    android:hint="对文章进行评论吧！"
                    android:paddingLeft="@dimen/dm020"
                    android:paddingRight="@dimen/dm020"
                    android:textColor="@color/title_666"
                    android:textColorHint="@color/title_999"
                    android:textSize="@dimen/dm026" />

                <RelativeLayout
                    android:id="@+id/rl_videos_detail_comment"
                    android:layout_width="@dimen/dm070"
                    android:layout_height="@dimen/dm070"
                    android:layout_marginRight="@dimen/dm010">

                    <ImageView
                        android:layout_width="@dimen/dm060"
                        android:layout_height="@dimen/dm060"
                        android:layout_centerInParent="true"
                        android:src="@drawable/news_comment" />

                    <TextView
                        android:id="@+id/tv_videos_detail_comment"
                        android:layout_width="@dimen/dm030"
                        android:layout_height="@dimen/dm030"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="26"
                        android:textSize="@dimen/dm022"
                        android:textColor="@color/white"
                        android:background="@drawable/bubble"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_videos_detail_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dm010">

                    <ImageView
                        android:layout_width="@dimen/dm060"
                        android:layout_height="@dimen/dm060"
                        android:src="@drawable/news_zan" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_videos_detail_cai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dm010">

                    <ImageView
                        android:layout_width="@dimen/dm060"
                        android:layout_height="@dimen/dm060"
                        android:src="@drawable/news_cai" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_videos_detail_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dm020">

                    <ImageView
                        android:layout_width="@dimen/dm060"
                        android:layout_height="@dimen/dm060"
                        android:src="@drawable/news_collect" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>