<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">
    <LinearLayout
        android:id="@+id/ll_item_pic_wenzi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/rb_delete"
            android:layout_width="@dimen/dm032"
            android:layout_height="@dimen/dm032"

            android:text="@null"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:button="@null"
            android:layout_marginLeft="@dimen/dm020"
            android:visibility="gone"
            android:background="@drawable/rb_delete"
            android:layout_marginRight="@dimen/dm020"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm012"
            android:layout_marginBottom="@dimen/dm012"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_new_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="住房城乡建设部办公厅关于进一步加强建筑施工安全生产工作的紧张进行中。住房城乡建设部办公厅关于进一步加强建筑施工安全生产工作的紧张进行中。"
                android:textColor="@color/title_333"
                android:textSize="@dimen/dm024" />

            <com.lchtime.safetyexpress.views.NoTouchRecycler
                android:id="@+id/home_new_item_rc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm012" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm016"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_new_item_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="未来新闻"
                    android:textColor="@color/text_9d9e9e"
                    android:textSize="@dimen/dm020" />

                <TextView
                    android:id="@+id/home_new_item_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:singleLine="true"
                    android:text="09:30"
                    android:textColor="@color/text_9d9e9e"
                    android:textSize="@dimen/dm020" />

                <TextView
                    android:id="@+id/home_new_item_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:singleLine="true"
                    android:text="223评论"
                    android:textColor="@color/text_9d9e9e"
                    android:textSize="@dimen/dm020" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm001"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:background="@color/line" />
    </LinearLayout>

    <View
        android:layout_below="@id/ll_item_pic_wenzi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:background="@color/line"/>

</RelativeLayout>