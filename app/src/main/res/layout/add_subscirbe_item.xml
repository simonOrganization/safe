<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm120"
        android:background="@color/white"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
       >
        <com.lchtime.safetyexpress.views.CircleImageView
            android:id="@+id/add_subscribe_item_image"
            android:layout_width="@dimen/dm080"
            android:layout_height="@dimen/dm080"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/circle_user_image"/>


        <LinearLayout
            android:id="@+id/ll_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dm010"
            android:gravity="center_vertical"
            >
            <CheckBox
                android:id="@+id/add_subscirbe_item_but"
                android:layout_width="@dimen/dm081"
                android:layout_height="@dimen/dm030"
                android:text="@null"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/circle_item_subscribe_selector"/>

            <TextView
                android:id="@+id/add_subscribe_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dm020"
                android:textColor="@color/title_999"
                android:text="0已订阅"
                android:layout_marginTop="@dimen/dm008"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/add_subscribe_item_image"
            android:layout_toLeftOf="@id/ll_subscribe"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/add_subscribe_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dm022"
                android:textColor="@color/title_333"
                android:text=""/>

            <TextView
                android:id="@+id/add_subscribe_item_content"
                android:layout_marginTop="@dimen/dm008"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dm018"
                android:textColor="@color/title_999"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""/>

        </LinearLayout>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:background="@color/line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>